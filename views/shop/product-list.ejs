<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs')%>
    <main>
      <% if(products.length > 0) { %> <% for(let i=0 ;i < products.length ;i++) { %>
      <div class="grid">
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= products[i].title %></h1>
          </header>
          <div class="card__image">
            <img class="productImage"
              src=<%= products[i].imageURL %>
              alt="A Book"
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%=products[i].price%></h2>
            <p class="product__description">
              <%=products[i].description%>
            </p>
          </div>
          <div class="card__actions">
            <a href="/products/<%=products[i].id%>" class="btn">Details</a>
            <%- include('../includes/add-to-cart.ejs',{i:i})%>
          </div>
        </article>
      </div>
      <% }} else{ %>
      <h1>No products Found</h1>
      <% } %>
    </main>
    <%- include('../includes/end.ejs')%>
